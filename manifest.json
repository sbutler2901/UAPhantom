{
  "description": "A simple user agent spoofer",
  "manifest_version": 2,
  "name": "UAPhantom",
  "version": "0.2.1",

  "applications": {
    "gecko": {
      "id": "sbutler@sbsoftware.me"
    }
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "alarms",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["helpers/userAgents.js", "background.js"]
  },

  "icons": {
    "48": "icons/PhantomPurple-48.png",
    "96": "icons/PhantomPurple-96.png"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/PhantomGreen-96.png",
      "32": "icons/PhantomGreen-96.png"
    },
    "browser_style": true
  }
}
