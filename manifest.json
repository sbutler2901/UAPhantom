{
  "description": "A user agent spoofer",
  "manifest_version": 2,
  "name": "UAPhantom",
  "version": "0.2.0",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "alarms",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["helpers/userAgents.js", "background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/PhantomRed.png",
      "32": "icons/PhantomRed.png"
    },
    "browser_style": true
  }
}
